<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:contentPadding="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="@dimen/level_number_circle_size"
        android:layout_height="@dimen/level_number_circle_size"
        android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/txt_ready"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/level_ready"
                android:background="@drawable/button_with_corner_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/txt_total"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:id="@+id/txt_total"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:text="@string/level_total"
                android:background="@drawable/button_with_corner_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>