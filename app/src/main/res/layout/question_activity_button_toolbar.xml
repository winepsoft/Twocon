<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>
        <com.rey.material.widget.Button
            app:rd_enable="true"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="2"
            android:background="@drawable/button_with_corner_green"
            android:textColor="@color/white"
            android:id="@+id/btn_know_number"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal" />
        <com.rey.material.widget.Button
            app:rd_enable="true"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="12"
            android:background="@drawable/button_with_corner_red"
            android:textColor="@color/white"
            android:id="@+id/btn_no_know_number"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <com.rey.material.widget.Button
                app:rd_enable="true"
                app:rd_style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btn_know"
                android:background="@drawable/button_with_corner_green"
                android:text="@string/answer_know"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"/>
            <com.rey.material.widget.Button
                app:rd_enable="true"
                app:rd_style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btn_no_know"
                android:background="@drawable/button_with_corner_red"
                android:text="@string/answer_no_know"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>