    <github.nisrulz.stackedhorizontalprogressbar.StackedHorizontalProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress_bar_question_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:progressDrawable="@drawable/stacked_horizontal_progress"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/layout_button_know_status">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
            <com.rey.material.widget.Button
                app:rd_enable="true"
                app:rd_style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btn_know"
                android:background="@drawable/button_with_corner_green"
                android:text="@string/answer_know"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:textAllCaps="false"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
            <com.rey.material.widget.Button
                app:rd_enable="true"
                app:rd_style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btn_no_know"
                android:background="@drawable/button_with_corner_red"
                android:text="@string/answer_no_know"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>