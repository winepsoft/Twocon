<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginTop="@dimen/margin_recycler_view_top"
    android:layout_marginRight="@dimen/margin_recycler_view_right"
    android:layout_marginLeft="@dimen/margin_recycler_view_right"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:contentPadding="@dimen/card_content_padding"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">
    <LinearLayout
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/settings_label"
        android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_with_corner_blue"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/setting_update"
                android:text="@string/settings_app_update"
                android:textColor="@color/white"
                android:drawableRight="@mipmap/update"
                android:layout_weight="1"
                style="?android:attr/buttonStyleSmall" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_with_corner_blue"
                android:id="@+id/settings_retrieval"
                android:text="@string/settings_retrieval"
                android:textColor="@color/white"
                android:drawableRight="@mipmap/reset"
                android:layout_weight="1"
                style="?android:attr/buttonStyleSmall"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_with_corner_blue"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/settings_backup"
                android:text="@string/setting_backup"
                android:textColor="@color/white"
                android:drawableRight="@mipmap/back_up"
                android:layout_weight="1"
                style="?android:attr/buttonStyleSmall"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>