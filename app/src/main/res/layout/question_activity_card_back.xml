<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/question_card_margin_top"
    android:layout_marginBottom="@dimen/question_card_margin_bottom"
    android:layout_marginRight="@dimen/question_card_margin_right"
    android:layout_marginLeft="@dimen/question_card_margin_left"
    card_view:cardCornerRadius="@dimen/question_card_corner"
    card_view:cardElevation="@dimen/question_card_elevation"
    android:id="@+id/back_card">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/back_layout">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_answer"
                        android:text="@string/answer"
                        android:lines="3"
                        android:gravity="fill_vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:baselineAligned="false">
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            fab:fab_size="mini"
                            app:fab_colorNormal="@color/blue"
                            app:fab_colorPressed="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:id="@+id/answer_voice"
                            android:src="@mipmap/voice_play"
                            android:layout_toStartOf="@+id/question_mark"
                            android:background="@null"
                            android:layout_centerVertical="true" />
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            fab:fab_size="mini"
                            app:fab_colorNormal="@color/orange"
                            app:fab_colorPressed="@color/orange"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:id="@+id/question_mark"
                            android:src="@mipmap/mark"
                            android:layout_toStartOf="@+id/answer_description"
                            android:background="@null"
                            android:layout_centerVertical="true" />
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            fab:fab_size="mini"
                            app:fab_colorNormal="@color/pink"
                            app:fab_colorPressed="@color/pink"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:id="@+id/answer_description"
                            android:src="@mipmap/arrow_expand"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_description"
                        android:text="@string/question_description"
                        android:lines="6"
                        android:gravity="center_vertical"
                        android:background="@color/item_foreground_selected_color"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:id="@+id/linearLayoutRight"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>