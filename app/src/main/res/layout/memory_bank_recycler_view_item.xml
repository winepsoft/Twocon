<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <winep.ir.twocon.Utility.RectangleView
        android:id="@+id/colorSquare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:contentPadding="@dimen/card_content_padding"
            card_view:cardElevation="@dimen/card_elevation"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:baselineAligned="false">

                        <TextView
                            android:id="@+id/txt_group_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lesson"
                            android:lines="1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_toLeftOf="@+id/linearLayoutInform"
                            android:layout_toStartOf="@+id/linearLayoutInform"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="@dimen/font_size_small" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/linearLayoutInform"
                            android:gravity="end"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:baselineAligned="false">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_memory_bank_item_question_seen"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/memory_bank_question_seen"
                                android:layout_marginRight="@dimen/memory_bank_item_margin_between_circle"
                                android:layout_marginLeft="@dimen/memory_bank_item_margin_between_circle"
                                android:id="@+id/txt_question_wrong_value"
                                android:text="560"
                                android:textSize="@dimen/font_size_small" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_memory_bank_item_answer_question_seen"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/memory_bank_answer_od_question_seen"
                                android:layout_marginRight="@dimen/memory_bank_item_margin_between_circle"
                                android:layout_marginLeft="@dimen/memory_bank_item_margin_between_circle"
                                android:id="@+id/txt_question_true_value"
                                android:text="200"
                                android:textSize="@dimen/font_size_small" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_memory_bank_item_question_true"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/memory_bank_question_true"
                                android:layout_marginRight="@dimen/memory_bank_item_margin_between_circle"
                                android:layout_marginLeft="@dimen/memory_bank_item_margin_between_circle"
                                android:id="@+id/txt_question_answer_seen"
                                android:text="20"
                                android:textSize="@dimen/font_size_small" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_memory_bank_item_question_wrong"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/memory_bank_question_wrong"
                                android:layout_marginRight="@dimen/memory_bank_item_margin_between_circle"
                                android:layout_marginLeft="@dimen/memory_bank_item_margin_between_circle"
                                android:id="@+id/txt_question_seen"
                                android:text="7"
                                android:textSize="@dimen/font_size_small" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="start">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_memory_bank_item_question_number"
                            android:textColor="@color/white"
                            android:text="243"
                            android:id="@+id/txt_question_number"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_marginRight="5dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_question_title"
                            android:text="Question is easy?"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/txt_question_number"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:id="@+id/linearLayoutRight"
                    android:layout_weight="1" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </winep.ir.twocon.Utility.RectangleView>
</FrameLayout>
