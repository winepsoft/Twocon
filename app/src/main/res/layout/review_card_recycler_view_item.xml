<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:contentPadding="@dimen/card_content_padding"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true"
        android:layout_marginRight="@dimen/margin_recycler_view_right"
        android:layout_marginLeft="@dimen/margin_recycler_view_right">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:baselineAligned="false">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_memory_bank_item_question_number"
                    android:textColor="@color/white"
                    android:text="243"
                    android:id="@+id/txt_review_cart_question_number"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"/>
                <TextView
                   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_review_cart_question_title"
                    android:layout_toEndOf="@+id/txt_review_cart_question_number"
                    android:layout_marginLeft="5dp"
                    android:minLines="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="Question is easy?"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:contentPadding="@dimen/card_content_padding"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true"
        android:layout_marginRight="@dimen/margin_recycler_view_right"
        android:layout_marginLeft="@dimen/margin_recycler_view_right">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_memory_bank_item_question_number"
                    android:textColor="@color/white"
                    android:text="243"
                    android:id="@+id/txt_review_cart_question_number_in_answer"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_review_cart_answer"
                    android:layout_toEndOf="@+id/txt_review_cart_question_number_in_answer"
                    android:layout_marginLeft="5dp"
                    android:minLines="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="سوال آسانی است"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>