<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_user_profile_upgrade">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/user_profile_last_name"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"/>
                <ViewSwitcher
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/view_switcher_user_profile_last_name"
                    android:layout_marginStart="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Watt"
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/txt_user_profile_last_name"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Watt"
                        android:id="@+id/edit_txt_user_profile_last_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center_horizontal" />
                </ViewSwitcher>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/user_profile_first_name"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"/>
                <ViewSwitcher
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/view_switcher_user_profile_first_name"
                    android:layout_marginStart="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="James"
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/txt_user_profile_first_name"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="James"
                        android:id="@+id/edit_txt_user_profile_first_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center_horizontal" />
                </ViewSwitcher>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/user_profile_email"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"/>
                <ViewSwitcher
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/view_switcher_user_profile_email"
                    android:layout_marginStart="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="email@gmail.com"
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/txt_user_profile_email"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="email@gmail.com"
                        android:id="@+id/edit_txt_user_profile_email"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center_horizontal" />
                </ViewSwitcher>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/user_profile_mobile"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"/>
                <ViewSwitcher
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/view_switcher_user_profile_mobile"
                    android:layout_marginStart="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="09121234567"
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/txt_user_profile_mobile"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="09121234567"
                        android:id="@+id/edit_txt_user_profile_mobile"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center_horizontal" />
                </ViewSwitcher>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/user_profile_account"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"/>
                <ViewSwitcher
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/view_switcher_user_profile_account"
                    android:layout_marginStart="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="free"
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/txt_user_profile_account"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="free"
                        android:id="@+id/edit_txt_user_profile_account"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center_horizontal" />
                </ViewSwitcher>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/user_profile_log_out"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:id="@+id/txt_user_profile_log_out"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/user_profile_upgrade"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_user_profile_upgrade"/>
</RelativeLayout>
