<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/settings_group_title"
        android:textColor="@color/black"
        android:layout_marginRight="@dimen/margin_recycler_view_right"
        android:layout_marginLeft="@dimen/margin_recycler_view_right"
        android:layout_marginTop="@dimen/margin_recycler_view_top"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_recycler_view_right"
        android:layout_marginLeft="@dimen/margin_recycler_view_right"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:contentPadding="@dimen/card_content_padding"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/settings_label"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/txt_settings_app_color"
                        android:text="@string/settings_app_color"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                </RelativeLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_1"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_2"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_3"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_4"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/txt_settings_app_color"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_5"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_6"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_7"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_8"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_9"/>
                        <com.getbase.floatingactionbutton.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fab_colorNormal="@color/colorPrimary"
                            app:fab_colorPressed="@color/colorPrimary"
                            app:fab_size="mini"
                            android:id="@+id/btn_settings_group_color_10"/>
                    </LinearLayout>
                </HorizontalScrollView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_settings_level_number"
                        android:text="@string/settings_level_number_title"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/editText_settings_level_number"
                        android:layout_toStartOf="@+id/editText_settings_level_number"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_settings_level_number"
                        android:layout_alignTop="@+id/txt_settings_level_number"
                        android:layout_alignParentEnd="true"
                        android:text="15"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_settings_view_hard_button"
                        android:text="@string/settings_view_hard_button"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/switch_settings_view_hard_button"
                        android:layout_toStartOf="@+id/switch_settings_view_hard_button"/>
                    <com.rey.material.widget.Switch
                        style="@style/Material.Widget.Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch_settings_view_hard_button"
                        android:layout_alignTop="@+id/txt_settings_view_hard_button"
                        android:layout_alignParentEnd="true"
                        android:thumb="@drawable/custom_switch_selector"
                        android:track="@drawable/custom_track"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_settings_change_question_answer"
                        android:text="@string/settings_change_question_and_answer"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/switch_settings_change_question_answer"
                        android:layout_toStartOf="@+id/switch_settings_change_question_answer" />
                    <com.rey.material.widget.Switch
                        style="@style/Material.Widget.Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch_settings_change_question_answer"
                        android:layout_alignTop="@+id/txt_settings_change_question_answer"
                        android:layout_alignParentEnd="true"
                        android:thumb="@drawable/custom_switch_selector"
                        android:track="@drawable/custom_track"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_settings_automatic_rtl_ltr"
                        android:text="@string/settings_automatic_rtl_ltr"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/switch_settings_automatic_rtl_ltr"
                        android:layout_toStartOf="@+id/switch_settings_automatic_rtl_ltr"/>
                    <com.rey.material.widget.Switch
                        style="@style/Material.Widget.Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch_settings_automatic_rtl_ltr"
                        android:layout_alignTop="@+id/txt_settings_automatic_rtl_ltr"
                        android:layout_alignParentEnd="true"
                        android:thumb="@drawable/custom_switch_selector"
                        android:track="@drawable/custom_track"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

